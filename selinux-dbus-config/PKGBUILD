# This PKGBUILD is maintained on https://github.com/archlinuxhardened/selinux.
# If you want to help keep it up to date, please open a Pull Request there.

pkgname=selinux-dbus-config
_pkgname=selinux-dbus
_pkgver=3.0-rc1
pkgver=${_pkgver/-/}
pkgrel=1
pkgdesc="DBus service which allows managing SELinux configuration"
groups=('selinux')
arch=('any')
url='https://github.com/SELinuxProject/selinux/wiki'
license=('GPL2')
depends=('python' 'selinux-python')
conflicts=('policycoreutils<2.7')
source=("https://github.com/SELinuxProject/selinux/releases/download/20191031/${_pkgname}-${_pkgver}.tar.gz")
sha256sums=('1f9afd4699df35d65bc60897122ea1e5455279eae9f771e79fdb65a1688155bb')

build() {
  cd "${_pkgname}-${_pkgver}"
  make
}

package() {
  cd "${_pkgname}-${_pkgver}"
  make DESTDIR="${pkgdir}" install
}
