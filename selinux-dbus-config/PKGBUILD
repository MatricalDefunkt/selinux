# Maintainer: Nicolas Iooss (nicolas <dot> iooss <at> m4x <dot> org)

pkgname=selinux-dbus-config
_pkgname=selinux-dbus
_pkgver=2.8-rc1
pkgver=${_pkgver/-/}
pkgrel=1
pkgdesc="DBus service which allows managing SELinux configuration"
groups=('selinux')
arch=('any')
url='https://github.com/SELinuxProject/selinux/wiki'
license=('GPL2')
depends=('python' 'selinux-python')
conflicts=('policycoreutils<2.7')
source=("https://raw.githubusercontent.com/wiki/SELinuxProject/selinux/files/releases/20180419/${_pkgname}-${_pkgver}.tar.gz")
sha256sums=('03159472ccdeb4b80ad6d7c5a3ece925a1f237ceca20088feed1d5999a6d982d')

build() {
  cd "${_pkgname}-${_pkgver}"
  make
}

package() {
  cd "${_pkgname}-${_pkgver}"
  make DESTDIR="${pkgdir}" install
}
